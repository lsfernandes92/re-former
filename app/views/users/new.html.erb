<%= form_tag("/users", method: "post") do %>
  <%= label_tag(:username, "Enter your username") %><br>
  <%= text_field(:user, :username) %><br>

  <%= label_tag(:email, "Enter your email") %><br>
  <%= text_field(:user, :email) %><br>

  <%= label_tag(:password, "Enter your password") %><br>
  <%= password_field(:user, :password) %><br>

  <%= label_tag(:password_confirmation, "Confirm your password") %><br>
  <%= password_field(:user, :password_confirmation) %><br>

  <%= submit_tag 'Submit' %>
<% end %>
